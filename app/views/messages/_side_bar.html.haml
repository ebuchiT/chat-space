.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        =link_to new_group_path, class:"edit-icon" do
          = icon("fas", "edit")
        =link_to edit_user_path(current_user), class:"config-icon" do
          = icon("fas", "cog")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-box
        =link_to group_messages_path(group), class:"group-box" do
          .group-box__name
            = group.name
          .group-box__message
            = group.show_last_message
